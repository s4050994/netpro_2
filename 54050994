    private void gozActionPerformed(java.awt.event.ActionEvent evt) {                                         

        Sz tab1 = new Sz(monitor1,field1,getIP1.getText(),"Thread 1");
        tab1.start();
        Sz tab2 = new Sz(monitor2,field2,getIP2.getText(),"Thread 2");
        tab2.start();
    }                                        

    class Sz extends Thread{
        String nz;
        String urlz;
        JEditorPane sz;
        JTextArea threadZ;
        URL url;
    
        Sz(JEditorPane show,JTextArea threadF,String url,String name){
            this.nz = name;
            this.urlz = url;
            this.sz = show;
            this.threadZ = threadF;
            this.url = getUrl(urlz);
        }
        private URL getUrl(String url) {
            URL verifiedUrl = null;
            try {
              verifiedUrl = new URL(url);
            }catch (Exception e) {
                 return null;
            }
            return verifiedUrl;
        }
        @Override
        public void run(){
            String msg = nz + "Start\n";
            threadZ.setText(msg);
            setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            try {
                URLConnection conn = url.openConnection();
                Map<String, List<String>> map = conn.getHeaderFields();
                msg += "Printing Response Header...\n";
                
                for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                    msg += entry.getKey() +":"+entry.getValue()+"\n";
                }
                msg += "\nGet Response Header By Key ...\n";
                String server = conn.getHeaderField("Server");
                if (server == null) {
                    msg += "Key 'Server' is not found!";
                } else {
                    msg += "Server - " + server;
                }
                msg += "\n Done";
            }catch (Exception e) {
                msg += "ERROR!";
            }
            
            threadZ.setText(msg);
            try{
               sz.setPage(url);
            }catch(Exception e){
                
            }finally{
                setCursor(Cursor.getDefaultCursor());
                msg += "\n" + nz + " Stop";
                threadZ.setText(msg);
            }
        }
    }
                      

